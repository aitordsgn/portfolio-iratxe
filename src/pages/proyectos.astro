---
import Layout from '../layouts/Layout.astro';
import Heading from '../components/Heading.astro';

import Galeria from '@/components/Galeria.astro';
import MasonryGalery from '@/components/MasonryGalery.astro';
import images from '@/images.json';



const Galeria1 =  [93, 94, 96];
const Galeria2 = [167, 168, 169];
const Galeria3 = [ 227, 224, 225, 226];
const Galeria4 = [17, 18, 19, 20];
const Galeria5 = [207,218,219,107,143,130,189,139];
const Galeria6 = [213,8,215,135,85,136,161,7,21];
const Galeria7 = [14,160,49,178,164,153,132,133,134,142,15]



// Función que filtra y ordena las imágenes según el orden de una galería específica
const filterAndSortGallery = (images: any[], gallery: number[]) => {
    return images
        .filter((image: any) => gallery.includes(image.id))
        .sort((a: any, b: any) => gallery.indexOf(a.id) - gallery.indexOf(b.id));
};

// Aplicamos la función a cada galería
const filteredGalery1 = filterAndSortGallery(images, Galeria1);
const filteredGalery2 = filterAndSortGallery(images, Galeria2);
const filteredGalery3 = filterAndSortGallery(images, Galeria3);
const filteredGalery4 = filterAndSortGallery(images, Galeria4);
const filteredGalery5 = filterAndSortGallery(images, Galeria5);
const filteredGalery6 = filterAndSortGallery(images, Galeria6);
const filteredGalery7 = filterAndSortGallery(images, Galeria7);



const Branding = [
    {
        "src": "img-57",
        "alt": "Logo Charlotte Tilbury",
        "link": "CharlotteTilbury",
        "width": 1000,
        "height": 1000
    },
    {
        "src": "img-62",
        "alt": "Logo Tierra Madre",
        "link": "TierraMadre",
        "width": 1000,
        "height": 1000
    },
    {
        "src": "img-239",
        "alt": "Logo Dirdira",
        "link": "Dirdira",
        "width": 1000,
        "height": 1000
    },
    {
        "src": "img-63",
        "alt": "Logo Free Spirit",
        "link": "FreeSpirit",
        "width": 1000,
        "height": 1000
    },
    {
        "src": "img-33",
        "alt": "Logo Golf in One",
        "link": "GolfInOne",
        "width": 1000,
        "height": 1000
    },
    {
        "src": "img-51",
        "alt": "Logo Goxo",
        "link": "Goxo",
        "width": 1000,
        "height": 1000
    },
]
---

<Layout 
  title="Proyectos de Iratxe Conde - Publicista y Diseñadora Gráfica"
  description="Explora los proyectos realizados por Iratxe Conde, publicista y diseñadora gráfica en Bilbao. Conoce su trabajo en branding, diseño gráfico, ilustración y publicidad."
>
    <Heading title="Proyectos"/>
    <h2>Branding</h2>
    <div class={`grid grid-cols-3 gap-2 mx-auto max-w-6xl pb-10 px-2`}>
        {Branding.map((image, i: number) => (
          <a href={`/Branding/${image.link}`}
             class="relative rounded-xl overflow-hidden hover:scale-105 transition-transform aspect-square">
            <img 
                src={`/imgs/${image.src}_opt.webp`} 
                alt={image.alt}
                class="object-cover w-full h-full"
                loading="eager"
                width={image.width} 
                height={image.height}
                title={image.alt}/>
          </a>
        ))}
    </div>





      
    <h2>Diseños e ilustraciones</h2>
    <Galeria images={filteredGalery1} columns={3} />
    <Galeria images={filteredGalery2} columns={3} />
    <Galeria images={filteredGalery3} columns={4} />
    <Galeria images={filteredGalery4} columns={4} />
    <Galeria images={filteredGalery5} columns={4} />
    <h2>Publicidad</h2>
    <Galeria images={filteredGalery6} columns={3} />
    <h2>Ilustraciones de retratos
    </h2>
    <MasonryGalery images={filteredGalery7} columns={3} />



    
 <two-up class="w-[80%] mx-auto h-full max-w-[500px]">
    <div class="w-full p-0 m-0 h-full">
        <img src="/imgs/img-207.webp" alt="Camuflaje ilustración" class="w-full h-full object-cover" width="1703" height="2000" loading="lazy"
        title="Camuflaje ilustración">
    </div>
    <div class="w-[100%] p-0 m-0 h-full">
        <img src="/imgs/img-208.webp" alt="Camuflaje inspiración" class="w-full h-full object-cover" width="564" height="676" loading="lazy"
        title="Camuflaje inspiración">
    </div>
</two-up>

<script type="module" src="https://unpkg.com/two-up-element"></script>

</Layout>