---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

  
<h1 class="relative my-8 text-foreground font-bold text-3xl text-center leading-tight">
    <span class="block w-[60%] min-w-[400px] h-px bg-gray-300 mx-auto mb-4"></span>
    {title}
    <span class="block w-[60%] min-w-[400px] h-px bg-gray-300 mx-auto mt-4"></span>
</h1>