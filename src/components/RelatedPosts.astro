---
import { slugify, formatDate } from "../js/utils";
const { relatedPosts } = Astro.props;
---

{relatedPosts.length > 0 ? (
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    {relatedPosts.map((post) => (
      <div class="bg-white shadow-md rounded-lg overflow-hidden transform transition duration-300 hover:scale-105">
        <a href={post.url} class="block">
          {post.frontmatter.image && (
            <img src={post.frontmatter.image.url} alt={post.frontmatter.titulo} class="w-full h-48 object-cover" />
          )}
          <div class="p-4">
            <h3 class="text-lg font-semibold mb-2">{post.frontmatter.titulo}</h3>
            <p class="text-sm text-neutral-400 mb-4">
              Por <span href={`/author/${slugify(post.frontmatter.author)}/`} class="text-neutral-400">{post.frontmatter.author}</span>
              {" â€¢ "}
              {formatDate(post.frontmatter.pubDate)}
            </p>
          </div>
        </a>
      </div>
    ))}
  </div>
) : (
  <p>No related posts found.</p>
)}
