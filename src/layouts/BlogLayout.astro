---
// Supports weights 100-900
import Layout from '@/layouts/Layout.astro';
import Heading from '@/components/Heading.astro';
import User from '@/components/icons/User.astro';
import Calendar from '@/components/icons/Calendar.astro';


import { formatDate }  from "../js/utils";

import 'photoswipe/style.css';



const {frontmatter} = Astro.props;
console.log(frontmatter);

const {title,description,pubDate,category,author,image,titulo} = frontmatter;
---

  


<Layout {title} {description}>
	
	<header class="flex flex-col gap-1 justify-center">
		<Heading title={titulo}>
	</header>
  
	<div class="post-content max-w-5xl mx-auto w-[80%]">
		<div class="content">
			<slot/>
		</div>
	</div>

  <div class="post-content max-w-5xl mx-auto w-full flex flex-row items-center text-foregroundLowContrast justify-center">
    <User class="size-9 px-2"/>
    {author}

    <Calendar class="size-9 px-2"/>
    {formatDate(pubDate)}
  </div>
</Layout>




<style is:global>
  .centered-container {
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    width: 100%;
  
  }
  .flex-container-start {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    width: 100%;
  }
  
  
  .flex-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
  }
  
  .flex-item {
    flex: 1;
    padding: 10px;
    text-align: start;
  }
  
  .grid-2-container,
    .grid-3-container,
    .grid-4-container {
      display: grid;
      gap: 0.5rem; /* Espacio entre los elementos de la grid */
      width: 100%;
    }
  .grid-2-container {
    grid-template-columns: repeat(2, 1fr); /* 3 columnas de igual ancho */
  }
  
  .grid-3-container {
    grid-template-columns: repeat(3, 1fr); /* 3 columnas de igual ancho */
  }
  .grid-4-container {
    grid-template-columns: repeat(4, 1fr); /* 3 columnas de igual ancho */
  }
  .grid-item {
    position: relative;
    overflow: hidden;
    border-radius: 1rem; /* rounded-xl */
    transition: transform 0.3s ease; /* transition-transform */
    aspect-ratio: 1 / 1; /* aspect-square */
  }
  
  .grid-item:hover {
    transform: scale(1.05); /* hover:scale-105 */
  }
  
  .grid-item img {
    object-fit: cover; /* Ajusta la imagen para que cubra el contenedor */
    width: 100%;
    height: 100%;
  }
  @media (max-width: 768px) {
    .grid-2-container,
    .grid-3-container,
    .grid-4-container {
      grid-template-columns: repeat(2, 1fr); /* Cambia a 2 columnas en pantallas pequeñas */
    }
    .flex-container {
    flex-direction: column; /* Cambia a columna en pantallas pequeñas */
  }
  .flex-container-start {
    flex-direction: column; /* Cambia a columna en pantallas pequeñas */
  }
  
  }
  
  @media (max-width: 480px) {
    .grid-2-container,
    .grid-3-container,
    .grid-4-container {
      grid-template-columns: 1fr; /* Cambia a 1 columna en pantallas muy pequeñas */
    }
  }
  
  .parent {
    display: flex;
    flex-wrap: wrap;
    gap: 10px; /* Espacio entre los elementos */
  }
  
  .child {
    flex: 1 1 calc(33.33% - 20px); /* Ajusta el valor del 33.33% según el número de columnas */
    box-sizing: border-box;
    display: flex;
    align-items: center;
    justify-content: center;
    height: auto; /* Ajusta la altura automática */
    
    border-radius: 1rem; /* rounded-xl */
    transition: transform 0.3s ease; /* transition-transform */
  }
  .grid-item-auto {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    transition: transform 0.3s ease;
    width: 100%;
    height: auto;
    transform-origin: center center; /* Asegura que el escalado ocurra desde el centro */
  }
  
  .grid-item-auto:hover {
    transform: scale(1.05);
  }
  
  .child-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block; /* Asegura que las imágenes sean bloques */
  
    border-radius: 1rem; /* rounded-xl */
    transition: transform 0.3s ease; /* transition-transform */
  }
  
  .child a:hover {
    transform: scale(1.05); /* hover:scale-105 */ 
  }
  .grid-2-container,
  .grid-3-container,
  .grid-4-container {
    position: relative;
  }
  
  </style>
  
  <script>
    import PhotoSwipeLightbox from 'photoswipe/lightbox';
  
    const lightbox = new PhotoSwipeLightbox({
      gallery: '#gallery',
      children: 'a',
      pswpModule: () => import('photoswipe')
    });
    lightbox.init();
  </script>